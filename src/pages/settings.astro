---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="max-w-4xl mx-auto p-6 mt-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">設定</h1>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">帳戶設定</h2>

      <div class="mb-6">
        <label class="block text-gray-600 mb-2">語言</label>
        <select class="w-full p-3 border border-gray-300 rounded-lg">
          <option>繁體中文</option>
          <option>简体中文</option>
          <option>English</option>
        </select>
      </div>

      <div class="mb-6">
        <label class="block text-gray-600 mb-2">隱私設定</label>
        <div class="space-y-2">
          <label class="flex items-center">
            <input type="radio" name="privacy" class="mr-2" />
            公開
          </label>
          <label class="flex items-center">
            <input type="radio" name="privacy" class="mr-2" />
            私人
          </label>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">應用程式設定</h2>

      <div class="flex items-center justify-between py-3 border-b">
        <span class="text-gray-600">接收通知</span>
        <input type="checkbox" class="w-4 h-4" />
      </div>

      <div class="flex items-center justify-between py-3 border-b">
        <span class="text-gray-600">自動更新應用程式</span>
        <input type="checkbox" class="w-4 h-4" checked />
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">外觀設定</h2>

      <div class="flex items-center justify-between py-3 border-b">
        <span class="text-gray-600">深色模式</span>
        <input type="checkbox" class="w-4 h-4" />
      </div>
    </div>

    <div class="flex justify-end">
      <button class="bg-rose-500 text-white px-6 py-3 rounded-lg hover:bg-rose-600">
        儲存設定
      </button>
    </div>
  </div>
</Layout>